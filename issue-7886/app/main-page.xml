
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">

    <ActionBar title="Testing Android Elevation on Button" icon=""></ActionBar>

    <StackLayout class="p-20">
        <Label text="Tap the button" class="h1 text-center"/>
        <Button text="TAP" tap="{{ onTap }}" class="-primary" androidElevation="10"/>
        <Label text="{{ message }}" class="h2 text-center" textWrap="true"/>
        <Button text="Go to the sub-page (with)" tap="goToSubPage" class="-primary" androidElevation="10"/>
    </StackLayout>
</Page>
